%p#notice= notice

%h1 Perfil de entrenador
.float-left
  = link_to  :back do
    .btn.btn-primary
      = 'Atras'

%table.table.table-striped
  %thead
    %tr
      %th{:colspan => "3"}

= form_for @trainer do |f|
  %hr
  = f.label 'Nombre'
  = f.text_field :nombre, required: true
  %br
  = f.label 'Apellido'
  = f.text_field :apellido, required: true
  %br
  = f.submit 'Crear', class: 'btn btn-primary'
  %hr
